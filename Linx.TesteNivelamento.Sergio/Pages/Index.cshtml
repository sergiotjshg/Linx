@page
@model Linx.TesteNivelamento.Sergio.Entity.PessoaVO
@{
    ViewData["Title"] = "Pessoa";
}

<h2>Controle Pessoas</h2>

<h4>PessoaVO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" id="Nome" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinheiro" class="control-label"></label>
                <input asp-for="Dinheiro" class="form-control" />
                <span asp-validation-for="Dinheiro" class="text-danger"></span>
            </div>
            <div class="form-group">


                <a class="btn btn-default" href="@Url.Action("Index","Pessoa", new { Nome = "" , Idade = "Idade", Dinheiro = "Dinheiro"})" id="btnAdicionar" role="button">Adicionar</a>
                <input type="submit" value="Atualizar" id="btnAtualizar" class="btn btn-default" />
                <input type="submit" value="Remover" id="btnRemover" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

    <script type="text/javascript"></script>

    <script>

        $(document).ready(function ()){
            $("#btnAdicionar").click(function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Index", "Pessoa")',
                    dataType : "Json",
                    data: {
                        "Nome": Nome
                    }
                })
            })
        }

    </script>
}
